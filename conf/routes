# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /search              controllers.Application.search

GET     /experimental               controllers.Application.experimental
GET     /experimental               controllers.Application.searchexperimental

GET     /interactive                controllers.Application.interactive

GET     /indexing                   controllers.Application.indexingDocument
POST     /indexing                  controllers.Application.postIndexingDocument
#
#GET     /load/stopwords             controllers.Application.loadStopwords
#GET     /load/documents             controllers.Application.loadDocuments

GET       /stopwords                controllers.Application.stopwords
POST       /stopwords               controllers.Application.postStopwords

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


#testing
GET     /testresultinteractive      controllers.Application.testResultInteractive
GET     /testresultexperimental      controllers.Application.testResultExperimental
